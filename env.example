# Zorix Agent Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
APP_PORT=8000
HOST=127.0.0.1
WORKSPACE_ROOT=./workspace

# =============================================================================
# AWS BEDROCK CONFIGURATION
# =============================================================================
# AWS Region for Bedrock service
BEDROCK_REGION=us-east-1

# Primary LLM model for reasoning and tool calling
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20240620-v1:0

# Embedding model for vector search
BEDROCK_EMBED_MODEL_ID=amazon.titan-embed-text-v2:0

# Generation parameters
MAX_TOKENS=4000
TEMPERATURE=0.2
REQUEST_TIMEOUT_SECS=120

# =============================================================================
# AWS CREDENTIALS
# =============================================================================
# Option 1: Use AWS credentials (recommended for development)
# AWS_ACCESS_KEY_ID=your_access_key_here
# AWS_SECRET_ACCESS_KEY=your_secret_key_here
# AWS_SESSION_TOKEN=your_session_token_here (if using temporary credentials)

# Option 2: Use AWS CLI profile (alternative)
# AWS_PROFILE=your_profile_name

# Option 3: Use IAM roles (recommended for production)
# Leave credentials empty to use IAM instance profile or ECS task role

# =============================================================================
# SECURITY CONFIGURATION  
# =============================================================================
# Allowed commands for run_command tool (comma-separated)
COMMAND_ALLOWLIST=npm,yarn,pnpm,pytest,python,python3,node,go,java,mvn,gradle,make,git,curl,wget,ls,cat,grep,find,sed,awk

# Command execution timeout
COMMAND_TIMEOUT_SECS=90

# Git configuration for commits
GIT_AUTHOR_NAME=Zorix Agent
GIT_AUTHOR_EMAIL=zorix@local

# =============================================================================
# OBSERVABILITY (OPTIONAL)
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# OpenTelemetry exporter endpoint (leave empty to disable)
OTEL_EXPORTER_OTLP_ENDPOINT=

# Structured logging format (json, text)
LOG_FORMAT=text

# =============================================================================
# VECTOR INDEX CONFIGURATION
# =============================================================================
# Vector index storage path
VECTOR_INDEX_PATH=./data/vector_index

# Chunk size for document processing
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# =============================================================================
# MEMORY CONFIGURATION
# =============================================================================
# SQLite database path for persistent memory
MEMORY_DB_PATH=./data/memory.db

# Session memory size (number of recent messages to keep)
SESSION_MEMORY_SIZE=50

# =============================================================================
# DEVELOPMENT/DEBUGGING
# =============================================================================
# Enable debug mode (more verbose logging)
DEBUG=false

# Enable API documentation
ENABLE_DOCS=true

# Enable CORS for web interface development
ENABLE_CORS=false

# Hot reload for development
RELOAD=false

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# Number of worker processes (for production deployment)
WORKERS=1

# Enable metrics collection
ENABLE_METRICS=false

# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# AGENTCORE CONFIGURATION (FOR BEDROCK AGENTCORE DEPLOYMENT)
# =============================================================================
# AgentCore Gateway endpoint (only needed for Gateway tool registration)
# AGENTCORE_GATEWAY_ENDPOINT=

# AgentCore workspace path (overrides WORKSPACE_ROOT in AgentCore)
# AGENTCORE_WORKSPACE=/tmp/agentcore_workspace

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================
# Redis URL for enhanced caching (optional)
# REDIS_URL=redis://localhost:6379

# PostgreSQL URL for advanced memory storage (optional)
# DATABASE_URL=postgresql://user:password@localhost/zorix

# External API keys for additional tools (optional)
# GITHUB_TOKEN=your_github_token
# SLACK_TOKEN=your_slack_token
