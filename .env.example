# Zorix Agent Configuration
# Copy this file to .env and fill in your values

# Server Configuration
APP_PORT=8123
HOST=127.0.0.1

# Workspace Configuration
WORKSPACE_ROOT=./workspace

# AWS Bedrock Configuration
BEDROCK_REGION=us-east-1
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20240620-v1:0
BEDROCK_EMBED_MODEL_ID=amazon.titan-embed-text-v2:0

# AWS Credentials (use AWS CLI, IAM roles, or environment variables)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_SESSION_TOKEN=your_session_token  # if using temporary credentials

# LLM Parameters
MAX_TOKENS=4000
TEMPERATURE=0.2
REQUEST_TIMEOUT_SECS=120

# Observability (optional)
OTEL_EXPORTER_OTLP_ENDPOINT=
LOG_LEVEL=INFO

# Security
COMMAND_ALLOWLIST=npm,yarn,pnpm,pytest,python,node,go,java,mvn,gradle,make
COMMAND_TIMEOUT_SECS=90

# Git Configuration
GIT_AUTHOR_NAME=Zorix Agent
GIT_AUTHOR_EMAIL=zorix@local

# Storage Paths
VECTOR_INDEX_PATH=./data/vector_index
MEMORY_DB_PATH=./data/memory.db
MAX_CHUNK_SIZE=1000
MAX_SESSION_MESSAGES=100